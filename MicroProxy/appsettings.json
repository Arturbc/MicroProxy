{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MinutosValidadeCookie": 0, // Tempo máximo de validade dos cookies das aplicações retransmitidas, 0 para usar o padrão de 30 dias (opcional)
  "IPs": [ "[::1]:5000", "127.0.0.1:5000" ], // Lista de IPs e portas em uso pela aplicação
  "CertificadoPrivado": "", // Certificado PFX (Em branco para usar HTTP não seguro)
  "CertificadoPrivadoSenha": "", // Senha do certificado PFX (opcional)
  "PortaHttpRedirect": "", // Porta HTTP para redirecionar para HTTPS (Requer CertificadoPrivado)
  "Sites": [ // Lista de sites a serem tratados
    {
      "BindUrl": "", // Host da requisição a ser redirecionado para o alvo (opcional)
      "UrlAlvo": "http://localhost:1234", // Destino da requisição
      "IgnorarCertificadoAlvo": "true", // Ignorar o certificado do alvo
      "RequestHeadersAdicionais": { "*": [ "^##SchemaAlvo##://##AuthorityAlvo##", "^##AuthorityAlvo##(/[^/,])+/?$", "^##AuthorityAlvo##$", "^##HostAlvo##$" ] }, // { "header1": ["Valor1","Valor2"...], "header2"... } Headers adicionados/substituidos da requisicao redirecionada (opcional) -- suporta ##variáveis de substituição## ("header*" para substituir [aceita regex no valor], "header" para adicionar, "*" para substituir em qualquer um [aceita regex no valor])
      "ResponseHeadersAdicionais": { "*": [ "^##SchemaAtual##://##AuthorityAtual##", "^##AuthorityAtual##(/[^/,])+/?$", "^##AuthorityAtual##$", "^##HostAtual##$" ] }, // { "header1": ["Valor1","Valor2"...], "header2"... } Headers adicionados/substituidos da resposta redirecionada (opcional) -- suporta ##variáveis de substituição## ("header*" para substituir [aceita regex no valor], "header" para adicionar, "*" para substituir em qualquer um [aceita regex no valor])
      "ExePath": "", // Executável com caminho completo ou relativo para execução e controle durante a execução do proxy (opcional) -- suporta ##variáveis de substituição##
      "ExeArgumentos": "", // Argumentos para utilizar no executável (opcional, requer ExePath) -- suporta ##variáveis de substituição##
      "ExePathDiretorio": "", // Pasta com caminho completo ou relativo que o executável irá utilizar (Vazio para utilizar path do ExePath) (opcional, requer ExePath) -- suporta ##variáveis de substituição##
      "JanelaSeparada": "false", // Inicializar o executável em uma janela separada
      "AutoExec": "true" // Inicializar junto com o MicroProxy (caso false, o MicroProxy irá executar apenas no momento da navegação para este site)
    }
  ],
  "Cors": { // Parâmetros Cors
    "AllowOrigins": [ "*" ], // URLs permitidas para enviarem requisição, "*" permite qualquer coisa (opcional)
    "AllowHeaders": [ "*" ], // Headers permitidos na requisição, "*" permite qualquer coisa (opcional)
    "AllowMethods": [ "*" ] // Métodos de requisição permitidos , "*" permite qualquer coisa (opcional)
  }
}
